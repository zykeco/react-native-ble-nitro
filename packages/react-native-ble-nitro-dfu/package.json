{
  "name": "react-native-ble-nitro-dfu",
  "version": "0.1.0",
  "description": "Nordic DFU (Device Firmware Update) extension for react-native-ble-nitro",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "typescript": "./src/index.ts",
      "import": "./lib/index.js",
      "require": "./lib/commonjs/index.js",
      "types": "./lib/index.d.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run clean && npm run nitro-codegen && npm run build:esm && npm run build:commonjs",
    "build:esm": "tsc",
    "build:commonjs": "tsc --project tsconfig.commonjs.json",
    "prepublishOnly": "npm run build",
    "nitro-codegen": "nitrogen src",
    "clean": "rimraf lib && rimraf nitrogen/generated",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run build"
  },
  "keywords": [
    "react-native",
    "bluetooth",
    "ble",
    "dfu",
    "firmware",
    "nordic",
    "ota",
    "update",
    "nitro-modules"
  ],
  "author": "Zyke (https://zyke.co)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zykeco/react-native-ble-nitro.git",
    "directory": "packages/react-native-ble-nitro-dfu"
  },
  "homepage": "https://github.com/zykeco/react-native-ble-nitro/tree/main/packages/react-native-ble-nitro-dfu#readme",
  "bugs": {
    "url": "https://github.com/zykeco/react-native-ble-nitro/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "react-native": ">=0.76.0",
    "react-native-nitro-modules": "*",
    "react-native-ble-nitro": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "nitrogen": "^0.30.0",
    "react-native": "^0.81.4",
    "react-native-nitro-modules": "^0.30.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "files": [
    "lib/",
    "src/",
    "nitrogen/generated/",
    "nitro.json",
    "README.md",
    "LICENSE"
  ]
}
